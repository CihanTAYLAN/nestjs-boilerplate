{
  "name": "nestjs-boilerplate",
  "private": true,
  "version": "1.0.0",
  "description": "NestJS Boilerplate & Best Practices Base",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:ci": "npx nest build",
    "format": "biome format --write .",
    "start": "cross-env TZ='UTC' nest start",
    "start:dev": "cross-env TZ='UTC' nest start --watch",
    "start:debug": "cross-env TZ='UTC' nest start --debug --watch",
    "start:prod": "TZ='UTC' node dist/src/main",
    "lint": "biome check --write .",
    "lint:ci": "./node_modules/.bin/biome check --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:push": "prisma db push && prisma generate",
    "db:push:ci": "prisma db push",
    "db:generate": "prisma generate",
    "db:generate:ci": "prisma generate",
    "db:seed": "prisma db seed",
    "db:view": "prisma studio",
    "cli": "node cli/index.js"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@bull-board/express": "^6.15.0",
    "@bull-board/nestjs": "^6.15.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/platform-socket.io": "^11.1.9",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/throttler": "^6.3.0",
    "@nestjs/websockets": "^11.1.9",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@types/hbs": "^4.0.5",
    "@types/ioredis": "^5.0.0",
    "axios": "^1.13.2",
    "basic-auth": "^2.0.1",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.63.1",
    "cache-manager": "^7.2.5",
    "chalk": "4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-basic-auth": "^1.2.1",
    "geodesy": "^2.4.0",
    "hbs": "^4.2.0",
    "inquirer": "^12.11.0",
    "ioredis": "^5.8.2",
    "ms": "^2.1.3",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "pretty-bytes": "^7.1.0",
    "prompt": "^1.3.0",
    "qs": "^6.14.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "ua-parser-js": "^2.0.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^11.1.8",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "prisma": "^7.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
