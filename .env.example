NODE_ENV=development
APP_NAME=nestjs-boilerplate
APP_DESCRIPTION='NestJS Boilerplate & Best Practices Base'
APP_PORT=8000
APP_URL=http://127.0.0.1:8000
FRONTEND_URL=http://localhost:3000
APP_CORS=http://localhost:3000|http://127.0.0.1:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nestjs-boilerplate?schema=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15d
JWT_REFRESH_EXPIRES_IN=30d

# API Documentation
DOC_USER=apiDoc
DOC_PASS=your-strong-doc-password

# Email Configuration
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=fromAddress
MAIL_FROM_NAME='NestJS Boilerplate'
MAIL_HOST=mailHost
MAIL_MAILER=smtp
MAIL_PASSWORD=mailPassword
MAIL_PORT=465
MAIL_USERNAME=mailUsername

# Cache Configuration
CACHE_ENABLED=true
CACHE_TYPE=redis  # 'memory' or 'redis'
CACHE_TTL=3600     # 1 hour in seconds
CACHE_MAX_ITEMS=100  # For in-memory cache only

# Redis (for caching and queues)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=redis
REDIS_USE_SSL=false
REDIS_DB_NUMBER=5

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# API Key for external access
APP_API_KEY=your-api-key-for-external-access
